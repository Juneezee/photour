<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/navigation_settings"
  app:startDestination="@id/action_settings">

  <fragment
    android:id="@+id/action_settings"
    android:name="com.photour.ui.settings.SettingsFragment"
    android:label="@string/settings"
    tools:layout="@xml/fragment_settings" >
    <action
        android:id="@+id/action_action_settings_to_about"
        app:destination="@id/about" />
  </fragment>

  <fragment
    android:id="@+id/about"
    android:name="com.photour.ui.about.AboutFragment"
    android:label="@string/about"
    tools:layout="@layout/fragment_about" />

</navigation>
