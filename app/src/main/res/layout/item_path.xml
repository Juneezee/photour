<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="trip"
            type="com.photour.model.TripElement" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorLightGray"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/trip_image"
                android:layout_width="fill_parent"
                android:layout_height="150sp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/image"
                android:src="@drawable/ic_logo_vertical"
                app:layout_constraintBottom_toTopOf="@id/trip_title"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:tripBitmap="@{trip.displayPhoto}" />

            <TextView
                android:id="@+id/trip_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{trip.tripname}"
                app:layout_constraintBottom_toTopOf="@id/image_count"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trip_image"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/fragment_horizontal_margin"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/image_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{trip.photoNo}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trip_title"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/fragment_horizontal_margin"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>
